library ieee;
use ieee.numeric_std.all;

package helpers is
  constant reg_len             : natural;
  function Register_Format(reg : unsigned; constant max_len : natural := reg_len) 
	return unsigned;
end package;

package body helpers is
  constant reg_len : natural := 4;
  
  function Register_Format(
    reg              : unsigned;
    constant max_len : natural := reg_len) return unsigned is

  begin
    if reg'length < max_len then
      return "0" & reg;
    else
      return reg;
    end if;
  end Register_Format;

end helpers;
